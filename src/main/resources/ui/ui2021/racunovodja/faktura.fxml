<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<Pane xmlns:fx="http://javafx.com/fxml/1" fx:id="idFakturaRacunovodjaPane" prefHeight="500.0"
      prefWidth="600.0" style="-fx-background-color: #004455 #004455;"
      xmlns="http://javafx.com/javafx/17" fx:controller="ui.controller.FakturaController">
    <children>
        <VBox prefHeight="440.0" prefWidth="600.0">
            <children>
                <HBox prefHeight="60.0" prefWidth="600.0">
                    <children>
                        <Label/>
                        <ComboBox prefHeight="27.0" prefWidth="70.0" promptText="ID">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="30.0"/>
                            </HBox.margin>
                        </ComboBox>
                        <ComboBox prefHeight="27.0" prefWidth="70.0" promptText="Tip">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="30.0"/>
                            </HBox.margin>
                        </ComboBox>
                        <ComboBox prefHeight="27.0" prefWidth="110.0" promptText="Dobavljač">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="30.0"/>
                            </HBox.margin>
                        </ComboBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="55.0" prefWidth="600.0">
                    <children>
                        <Label text="Od:" textFill="WHITE">
                            <HBox.margin>
                                <Insets bottom="5.0" left="10.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                            <font>
                                <Font name="Apple SD Gothic Neo Regular" size="13.0"/>
                            </font>
                        </Label>
                        <DatePicker prefHeight="26.0" prefWidth="100.0">
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </DatePicker>
                        <Label text="Do:" textFill="WHITE">
                            <HBox.margin>
                                <Insets left="5.0" right="5.0"/>
                            </HBox.margin>
                            <font>
                                <Font name="Apple SD Gothic Neo Regular" size="13.0"/>
                            </font>
                        </Label>
                        <DatePicker prefHeight="26.0" prefWidth="100.0">
                            <HBox.margin>
                                <Insets right="10.0"/>
                            </HBox.margin>
                        </DatePicker>
                        <Button mnemonicParsing="false" text="Pretraži">
                            <HBox.margin>
                                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                <TreeTableView prefHeight="327.0" prefWidth="580.0">
                    <columns>
                        <TreeTableColumn prefWidth="55.0" text="ID Fakture"/>
                        <TreeTableColumn prefWidth="51.0" text="Tip"/>
                        <TreeTableColumn prefWidth="62.0" text="Dobavljač"/>
                        <TreeTableColumn prefWidth="71.0" text="Kupac"/>
                        <TreeTableColumn prefWidth="71.0" text="Klijent"/>
                        <TreeTableColumn prefWidth="45.0" text="Suma(PDV ukljucen)"/>
                        <TreeTableColumn prefWidth="74.0" text="Artikal"/>
                        <TreeTableColumn prefWidth="66.0" text="Kolicina"/>
                        <TreeTableColumn prefWidth="84.0" text="Datum"/>
                    </columns>
                    <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </VBox.margin>
                </TreeTableView>
            </children>
        </VBox>
        <HBox alignment="CENTER_LEFT" layoutY="440.0" prefHeight="60.0" prefWidth="600.0">
            <children>
                <Button fx:id="btAddFaktura" mnemonicParsing="false" onAction="#addFaktura" text="Dodaj Fakturu">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                    <font>
                        <Font name="Apple SD Gothic Neo Regular" size="13.0"/>
                    </font>
                </Button>
                <Button fx:id="btIzmeniFakturu" mnemonicParsing="false" onAction="#izmeniFakturu" text="Izmeni fakturu"
                        textAlignment="CENTER">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="btDeleteFaktura" mnemonicParsing="false" onAction="#deleteFaktura" text="Obriši">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
    </children>
</Pane>
