<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane fx:id="idIzmeniFakturuRacunovodjaPane" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #004455 #004455;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.IzmeniFakturuRacunovodjaController">
   <children>
      <VBox alignment="CENTER" prefHeight="440.0" prefWidth="600.0">
         <children>
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="600.0">
               <children>
                  <Button fx:id="btDodajArtikal" mnemonicParsing="false" onAction="#addArtikal" text="Dodaj Artikal">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <font>
                        <Font name="Apple SD Gothic Neo Regular" size="13.0" />
                     </font>
                  </Button>
                  <Button fx:id="btDodajKupca" mnemonicParsing="false" onAction="#addKupac" text="Dodaj Kupca" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btDodajDobavljaca" mnemonicParsing="false" onAction="#addDobavljac" text="Dodaj Dobavljača">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btIzmeniPdv" mnemonicParsing="false" onAction="#izmeniPdv" text="Dodaj PDV">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="60.0" prefWidth="600.0">
               <children>
                  <Label />
                  <ComboBox prefHeight="25.0" prefWidth="90.0" promptText="Artikal">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
                     </HBox.margin>
                  </ComboBox>
                  <ComboBox prefHeight="25.0" prefWidth="88.0" promptText="Kupac">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
                     </HBox.margin>
                  </ComboBox>
                  <ComboBox prefHeight="25.0" prefWidth="114.0" promptText="Dobavljač">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
                     </HBox.margin>
                  </ComboBox>
                  <ComboBox prefHeight="26.0" prefWidth="96.0" promptText="PDV">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
                     </HBox.margin>
                  </ComboBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="btSaveFaktura" mnemonicParsing="false" onAction="#saveFaktura" text="Save" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
