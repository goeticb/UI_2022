<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane fx:id="idKlijentiPane" prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #004455;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.controller.KlijentiController">
    <children>
        <VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0">
            <children>
                <HBox fx:id="dpDo" minHeight="50.0" minWidth="200.0">
                    <children>
                        <Label alignment="CENTER" text="Naziv:" textFill="WHITE">
                            <HBox.margin>
                                <Insets right="5.0" top="10.0" />
                            </HBox.margin>
                            <font>
                                <Font name="Apple SD Gothic Neo Regular" size="13.0" />
                            </font>
                        </Label>
                  <TextField prefHeight="25.0" prefWidth="100.0">
                     <HBox.margin>
                        <Insets right="15.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Label alignment="CENTER" text="Adresa: " textFill="WHITE">
                     <font>
                        <Font name="Apple SD Gothic Neo Regular" size="13.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="5.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField prefHeight="25.0" prefWidth="100.0">
                     <HBox.margin>
                        <Insets right="15.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
                  <Label alignment="CENTER" text="Račun: " textFill="WHITE">
                     <font>
                        <Font name="Apple SD Gothic Neo Regular" size="13.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="5.0" top="10.0" />
                     </HBox.margin>
                  </Label>
                  <TextField prefHeight="25.0" prefWidth="100.0">
                     <HBox.margin>
                        <Insets right="15.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
                        <Button fx:id="btPretrazi" maxHeight="27.0" mnemonicParsing="false" text="Pretraži" textAlignment="CENTER">
                            <HBox.margin>
                                <Insets left="10.0" top="5.0" />
                            </HBox.margin>
                            <font>
                                <Font name="Apple SD Gothic Neo Regular" size="13.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
                <TreeTableView>
                    <columns>
                        <TreeTableColumn prefWidth="116.0" text="ID Dobavljač" />
                        <TreeTableColumn prefWidth="125.0" text="Naziv" />
                        <TreeTableColumn prefWidth="152.0" text="Adresa" />
                        <TreeTableColumn prefWidth="166.0" text="Račun" />
                    </columns>
                </TreeTableView>
            <HBox alignment="TOP_RIGHT" minHeight="50.0" minWidth="200.0" prefHeight="50.0" prefWidth="564.0">
               <children>
                  <Button fx:id="btAddKlijent" alignment="CENTER" mnemonicParsing="false" onAction="#addKlijent" text="Dodaj klijenta" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btIzmeniKlijenta" mnemonicParsing="false" onAction="#izmeniKlijenta" text="Izmeni klijenta">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="brObrisiKlijenta" mnemonicParsing="false" onAction="#deleteKlijent" prefWidth="107.0" text="Obriši klijenta">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <opaqueInsets>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </opaqueInsets>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
            </padding>
        </VBox>
    </children>
</Pane>
